<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <title>Sistema de Clientes</title>
</head>
<body>
    <h1>Lista de Clientes</h1>
    <table border="1">
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Email</th>
            <th>Telefone</th>
            <th>Endereço</th>
            <th>Limite</th>
            <th>Ações</th>
        </tr>
        <% clientes.forEach(cliente => { %>
            <tr>
                <td><%= cliente.idcliente %></td>
                <td><%= cliente.nome %></td>
                <td><%= cliente.email %></td>
                <td><%= cliente.telefone %></td>
                <td><%= cliente.endereco %></td>
                <td>R$ <%= cliente.limite.toFixed(2).replace('.', ',') %></td>
                <td><a href="/alterar/<%= cliente.idcliente %>">Alterar</a></td>
            </tr>
        <% }); %>
    </table>
</body>
</html>
